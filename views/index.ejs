<%- include("partials/header.ejs")%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDo List Application</title>
</head>
<body>
    <div class="container">
        <div class=" d-flex flex-column flex-md-row gap-4 pt-lg-5 align-items-center justify-content-center">
            <h1 class="header"><%= dayOfWeek%>, <%=month%> <%=day%></h1>
        </div>

        <div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
            <ul>

                <%for (let i = 0; i < newListItems.length; i++) { %>
                    <li class="item">                
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    <%= newListItems[i]%>
                                </label>
                        </div> 
                    </li>
                <%} %>
                <form action="/" method="POST">
                    <input type="text" name ="newItem" autocomplete="off" placeholder="New Item" class="custom-input">
                    <button type="submit" class="custom-button">Add</button>


                </form>
            </ul>

        </div>
    </div>

</body>
</html>

